
name: deploy
  
on:
  push:
    branches: [ dev ]

jobs:
  pull-image:
    runs-on: ubuntu-latest
    steps:    
    -
      name: Login-to-Docker Hub
      uses: docker/login-action@v3
      with:
        registry: docker.io
        username: ${{ secrets.DOCKERHUB_USERNAME }}
        password: ${{ secrets.DOCKERHUB_TOKEN }}
    -
      name: Build and push
      run: kubectl apply -f k8s.yml
      
